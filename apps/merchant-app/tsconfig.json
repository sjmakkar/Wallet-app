{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/db/*": ["../../packages/db/src/*"],
      "@repo/store/*": ["../../packages/store/src/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
